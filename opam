  "ocamlfind" {build}
  "ocamlbuild" {build}
  "yojson"
]

depopts: [
  "labltk" "lwt" "cohttp"
  "atdgen" {build}
]

build: [
  [ make "USE_TK=1" {labltk:installed} "all" ]
  [ make "bin/WebSim" ] {atdgen:installed & lwt:installed & cohttp:installed}
]

build-test: [ [ make "check" ] ]

available: [ ocaml-version >= "4.02.3" ]
